    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.0.2",
    "webpack-node-externals": "^3.0.0"
  }
