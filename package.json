    "bcrypt": "^5.1.0",
    "cloudinary": "^1.37.0",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "firebase": "^9.22.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.6",
